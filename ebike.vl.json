{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Access To E-Bike Rentals in Major Cities",
            "fontSize": 19
            },
  "width": 800,
  "height": 400,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/tmar0048/3179A2/main/AustraliaClipped.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/tmar0048/3179A2/refs/heads/main/ebike.csv"
        },
        "key": "State",
        "fields": ["State", "Price"]
      }
    },
    {"calculate": "datum.Price", "as": "PricePerDay"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "PricePerDay",
      "type": "ordinal",
      "scale": {"range": ["#1f77b4", "#e3e3e3"]},
      "legend": {"title": "State has Access"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Price", "type": "quantitative", "title": "Daily Maximum Fare"}
    ]
  }
}